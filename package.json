{
  "name": "setup-custom-tool",
  "version": "0.0.0",
  "private": true,
  "description": "Download and unpack a tool of your choice",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alex079/setup-custom-tool.git"
  },
  "keywords": [
    "actions",
    "tool",
    "setup"
  ],
  "author": "Alex079",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1",
    "@actions/glob": "^0",
    "@actions/tool-cache": "^1"
  },
  "devDependencies": {
    "@types/jest": "^25",
    "@types/node": "^13",
    "@typescript-eslint/parser": "^2",
    "@zeit/ncc": "^0",
    "eslint": "^6",
    "eslint-plugin-github": "^3",
    "eslint-plugin-jest": "^23",
    "jest": "^25",
    "jest-circus": "^25",
    "js-yaml": "^3",
    "prettier": "^1",
    "ts-jest": "^25",
    "typescript": "^3"
  }
}
